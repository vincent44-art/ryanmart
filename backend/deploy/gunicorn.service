[Unit]
Description=Gunicorn instance to serve job-tracking-system
After=network.target

[Service]
User=vincent
Group=vincent
WorkingDirectory=/home/vincent/money/job-tracking-system
# Load environment variables from this file (optional)
EnvironmentFile=/home/vincent/money/job-tracking-system/.env
ExecStart=/home/vincent/money/job-tracking-system/venv/bin/gunicorn \
    -k eventlet \
    -w 3 \
    --chdir /home/vincent/money/job-tracking-system \
    backend.app:app \
    --bind 127.0.0.1:5000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
